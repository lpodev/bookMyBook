<resources>

    <style name="CustomAndroidColors" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">
            @color/body_background
        </item>
        <item name="android:navigationBarColor">
            @color/black
        </item>
    </style>

    <style name="Theme.BookMyBook" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@color/body_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="fontFamily">@font/gotham_book</item>
        <item name="colorControlNormal">@color/green</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/gotham_book</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorHint">@color/lighterGrey</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>
    <style name="SearchViewTextStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="android:submitBackground">@android:color/transparent</item>
        <item name="android:searchHintIcon">@android:color/transparent</item>
    </style>
    <style name="TextEditStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>