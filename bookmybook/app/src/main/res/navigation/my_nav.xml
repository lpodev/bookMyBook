<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/addBookFragment"
        android:name="com.lpodev.bookmybook.fragments.add.AddBookFragment"
        android:label="Ajouter un livre"
        tools:layout="@layout/fragment_add_book">
        <action
            android:id="@+id/action_addBookFragment_to_libraryFragment"
            app:destination="@id/libraryFragment" />
    </fragment>
    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.lpodev.bookmybook.fragments.library.LibraryFragment"
        android:label="Votre bibliothÃ¨que"
        tools:layout="@layout/fragment_library">
        <action
            android:id="@+id/action_libraryFragment_to_addBookFragment"
            app:destination="@id/addBookFragment" />
        <action
            android:id="@+id/action_libraryFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <argument
            android:name="searchQuery"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null"/>
    </fragment>
    <fragment
        android:id="@+id/listFragment"
        android:name="com.lpodev.bookmybook.fragments.list.ListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/action_listFragment_to_libraryFragment"
            app:destination="@id/libraryFragment" />
        <action
            android:id="@+id/action_listFragment_to_scanFragment"
            app:destination="@id/scanFragment" />
    </fragment>
    <fragment
        android:id="@+id/scanFragment"
        android:name="com.lpodev.bookmybook.fragments.scan.ScanFragment"
        android:label="Scanner"
        tools:layout="@layout/fragment_scan" >
        <action
            android:id="@+id/action_scanFragment_to_listFragment"
            app:destination="@id/listFragment" />
        <action
            android:id="@+id/action_scanFragment_to_libraryFragment"
            app:destination="@id/libraryFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.lpodev.bookmybook.fragments.detail.DetailFragment"
        android:label="@string/details_header"
        tools:layout="@layout/fragment_details" >
        <action
            android:id="@+id/action_detailFragment_to_libraryFragment"
            app:destination="@id/libraryFragment" />
        <argument
            android:name="currentBook"
            app:argType="com.lpodev.bookmybook.models.Book" />
    </fragment>
</navigation>